{
    "name": "cinemasunshine/portal2018-orm",
    "description": "Cinemasunshine Portal2018 ORM",
    "type": "library",
    "license": "proprietary",
    "minimum-stability": "stable",
    "require": {
        "php": "~7.2",
        "doctrine/orm": "^2.7.4"
    },
    "require-dev": {
        "mp-okui/php-coding-standard": "v0.7.0-alpha",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "phpstan/phpstan": "^0.12.63",
        "phpstan/phpstan-doctrine": "^0.12.26",
        "phpstan/phpstan-phpunit": "^0.12.17",
        "phpunit/phpunit": "^8.5"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Cinemasunshine\\ORM\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "phplint": "vendor/bin/parallel-lint --no-progress --exclude vendor .",
        "phpcs": "vendor/bin/phpcs --standard=phpcs.xml",
        "phpcbf": "vendor/bin/phpcbf --standard=phpcs.xml",
        "phpstan": "vendor/bin/phpstan analyse -n --no-progress -c phpstan.neon",
        "phpunit": "vendor/bin/phpunit"
    }
}
